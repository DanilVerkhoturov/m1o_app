
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView1">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1"
        android:overScrollMode="always">
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2"
            android:background="#ff00b8d4">
            <TextView
                android:text="Афиша Ноябрьск"
                android:layout_width="match_parent"
                android:layout_height="41.9dp"
                android:id="@+id/textView3"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="1.5dp"
                android:textSize="25dp" />
        </RelativeLayout>
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="40.0dp"
            android:id="@+id/relativeLayout2"
            android:background="#ffffff"
            android:layout_marginLeft="0.0dp">
            <TextView
                android:text="Фильтр :все"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView3"
                android:textColor="#ff000000"
                android:textStyle="normal"
                android:textAlignment="left"
                android:layout_marginTop="7.6dp"
                android:textSize="15dp"
                android:layout_marginLeft="4.6dp" />
            <ImageButton
                android:src="@drawable/settings"
                android:layout_width="49.1dp"
                android:layout_height="32.0dp"
                android:id="@+id/imageButton1"
                android:layout_marginLeft="346.1dp"
                android:scaleType="fitXY"
                android:background="#ffffffff"
                android:layout_marginTop="4.2dp" 
                
            />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="257.9dp"
            android:id="@+id/linearLayout1"
            android:background="#ffffffff"
            android:overScrollMode="always">
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout1" />
            <ImageView
                android:src="@drawable/poster"
                android:layout_width="407.6dp"
                android:layout_height="197.7dp"
                android:id="@+id/imageView1"
                android:layout_marginBottom="0.0dp"
                android:scaleType="fitXY" />
            <TextView
                android:text="Название мероприятия"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:layout_marginBottom="0.0dp"
                android:layout_marginTop="3.4dp"
                android:layout_marginLeft="6.5dp" />
            <TextView
                android:text="Краткое описание"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginBottom="9.9dp"
                android:layout_marginLeft="10.3dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout1"
            android:background="#ffffffff"
            android:overScrollMode="always"
            android:layout_marginTop="9.8dp">
            <ImageView
                android:src="@drawable/poster"
                android:layout_width="407.6dp"
                android:layout_height="197.7dp"
                android:id="@+id/imageView1"
                android:layout_marginBottom="0.0dp"
                android:scaleType="fitXY" />
            <TextView
                android:text="Название мероприятия"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:layout_marginBottom="0.0dp"
                android:layout_marginTop="3.4dp"
                android:layout_marginLeft="6.5dp" />
            <TextView
                android:text="Краткое описание"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginBottom="9.9dp"
                android:layout_marginLeft="5.7dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout1"
            android:background="#ffffffff"
            android:overScrollMode="always"
            android:layout_marginTop="9.8dp">
            <ImageView
                android:src="@drawable/poster"
                android:layout_width="407.6dp"
                android:layout_height="197.7dp"
                android:id="@+id/imageView1"
                android:layout_marginBottom="0.0dp"
                android:scaleType="fitXY" />
            <TextView
                android:text="Название мероприятия"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:layout_marginBottom="0.0dp"
                android:layout_marginTop="3.4dp"
                android:layout_marginLeft="6.5dp" />
            <TextView
                android:text="Краткое описание"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginBottom="9.9dp"
                android:layout_marginLeft="5.7dp" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>